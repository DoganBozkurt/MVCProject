@model IEnumerable<EntityLayer.Concrete.Contact>

@{
    ViewData["PageTitle"] = "Users Message";
    ViewData["PageActionUrl"] = "/Admin/ListContact";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<div class="row">
    <div class="col-md-12">
        <ejs-grid id="contacts" dataSource="@Model" gridLines="None"
                  allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Name" field="Name"></e-grid-column>
                <e-grid-column headerText="Surname" field="Surname"></e-grid-column>
                <e-grid-column headerText="Email" field="Email"></e-grid-column>
                <e-grid-column headerText="Subject" field="Subject"></e-grid-column>
                <e-grid-column headerText="Message" field="Message" textAlign="Right" width="110px"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="150px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <button type="submit" class="btn btn-sm btn-link no-a-decoration"
                onclick='Deneme(`${Email}`,`${Message}`)'>
            <i class="fa-solid fa-eye fa-lg text-danger"></i>
        </button>
    </div>
</script>

<script>
    function Deneme(Email, Message) {
        Swal.fire({
            title: 'Message Details',
            html: `<p><strong>E-mail:</strong> ${Email}</p><p><strong>Mesaj:</strong> ${Message}</p>`,
            icon: 'info',
            confirmButtonText: 'Tamam',
        });
    }
</script>



