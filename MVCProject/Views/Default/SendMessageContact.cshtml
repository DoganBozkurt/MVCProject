@using EntityLayer.Concrete;
@model List<Contact>
<section class="section-padding bg-light" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center" data-aos="fade-down" data-aos-delay="150">
                <div class="section-title">
                    <h1 class="display-4 text-white fw-semibold">İletişime Geçin</h1>
                    <div class="line bg-white"></div>
                    <p class="text-white">Markalar için dijital deneyimler oluşturmayı seviyoruz. Lorem ipsumdan uzaklaşarak, etkileyici beceriler ve yaratıcı çözümler sunuyoruz. Siz de finansal hedeflerinize ulaşmak için bize katılın!</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center" data-aos="fade-down" data-aos-delay="250">
            <div class="col-lg-8">
                <form method="post" asp-controller="Default" asp-action="SendMessageContact" class="row g-3 p-lg-5 p-4 bg-white theme-shadow">
                    <div class="form-group col-lg-6">
                        <input type="text" class="form-control" placeholder="Ad" name="Name">
                    </div>
                    <div class="form-group col-lg-6">
                        <input type="text" class="form-control" placeholder="Soyad" name="Surname">
                    </div>
                    <div class="form-group col-lg-12">
                        <input type="email" class="form-control" placeholder="Email" name="Email">
                    </div>
                    <div class="form-group col-lg-12">
                        <input type="text" class="form-control" placeholder="Konu" name="Subject">
                    </div>
                    <div class="form-group col-lg-12">
                        <textarea rows="5" class="form-control" placeholder="Mesaj" name="Message"></textarea>
                    </div>
                    <div class="form-group col-lg-12 d-grid">
                        <button class="btn btn-brand">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    window.onload = function () {
        var successMessage = '@Html.Raw(TempData["SuccessMessage"])';
        var field = '@Html.Raw(TempData["field"])';
        var errorCode = '@TempData["ErrorCode"]'; 

        if (successMessage.length > 0) {
            Swal.fire({
                title: 'MESAJINIZ GÖNDERİLDİ',
                text: 'En kısa sürede dönüş yapılacaktır.',
                icon: 'success',
                confirmButtonText: 'Tamam'
            });
        }
        else if (field.length > 0) {
            Swal.fire({
                title: 'BİR SORUN OLUŞTU',
                text: field,
                icon: 'warning',
                confirmButtonText: 'Tamam',
                didClose: function () {
                    if (errorCode == 'Error1') { 
                        window.location.href = '#contact';
                    }
                }
            });
        }
    }


</script>
